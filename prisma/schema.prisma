generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Url {
  id         String    @id @default(uuid())
  original   String    @db.Text
  short      String    @unique
  visitCount Int       @default(0)
  userId     String?
  isTemp     Boolean   @default(true)
  expireAt   DateTime?
  createdAt  DateTime  @default(now())

  @@index([short])
  @@map("urls")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  @@map("users")
}
